---
import ProjectCard from './project_card.astro';
// 1. Define the API endpoint
const API_URL = "https://meta.welazure.dev/metadata?pageIndex=1&pageSize=10";

// 2. Fetch data from your API
let projects = []; // Start with an empty array

try {
  const response = await fetch(API_URL);
  
  if (response.ok) {
    const data = await response.json();
    const projectsFromApi = data.items; // Get the 'items' array from your API

    // 3. Map the API data to the format your ProjectCard component needs
    projects = projectsFromApi.map((project) => ({
      title: project.project_name,
      
      // Your API doesn't have a 'type' field. 
      // You can add "project_type": "AI" to your JSON metadata to fix this.
      // For now, we'll use a placeholder or 'null'.
      type: project.project_type || "Project", 
      
      description: project.project_description,
      
      // Use project_logo for the icon. If it's null, use project_image.
      // Add a fallback to a default image if both are null.
      iconUrl: project.project_logo || project.project_image || "/images/default_icon.png" 
    }));
  } else {
    console.error("Failed to fetch projects:", response.status);
  }
} catch (error) {
  console.error("Error fetching projects:", error.message);
}
---

<section class="project-grid-container">
    <h2 class="section-title">Recent Projects by Informatics Students</h2>
    <div class="project-grid">
        {projects.map((project) => (
            <ProjectCard 
                title={project.title}
                type={project.type}
                description={project.description}
                iconUrl={project.iconUrl}
            />
        ))}
    </div>
</section>

<style>
    .project-grid-container {
        padding: 2rem 0;
    }
    
    .section-title {
        font-size: 1.5rem;
        color: #0E6333;
        margin-top: 3rem;
        margin-bottom: 1.5rem;
    }

    .search-bar-wrapper {
        margin-bottom: 3rem;
        max-width: 600px;
    }
    
    .search-input {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 1rem;
    }

    .project-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr)); 
    gap: 1.5rem;
    grid-template-columns: repeat(3, 1fr);
    }
</style>
