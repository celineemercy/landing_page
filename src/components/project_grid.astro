---
import ProjectCard from './project_card.astro';
const API_URL = "https://meta.welazure.dev/metadata?pageIndex=1&pageSize=10";


interface ProjectData {
    title: string;
    type: string;
    description: string;
    iconUrl: string;
    websiteUrl?: string;
    githubUrl?: string;
    visible: boolean;
}

let projects: ProjectData[] = [];

try {
    const response = await fetch(API_URL);

    if (response.ok) {
        const data = await response.json();
        const projectsFromApi = data.items;

        projects = projectsFromApi.map((project: any) => ({
            title: project.project_name,

            type: project.project_type || "Project",

            description: project.project_description || "",

            websiteUrl: project.domain,
            githubUrl: project.project_link || "",
            iconUrl: project.project_logo || project.project_image || "/images/default_icon.png",
            visible: project.visible
        }));
    } else {
        console.error("Failed to fetch projects:", response.status);
    }
} catch (error) {
    if (error instanceof Error) {
        console.error("Error fetching projects:", error.message);
    } else {
        console.error("Error fetching projects:", error);
    }
}
---

<section class="project-grid-container">
    <h2 class="section-title">Recent Projects by Informatics Students</h2>
    <div class="project-grid">
        {/* <ProjectCard /> */}
        {projects.map((project: ProjectData) => (
                project.visible ??
                <ProjectCard
                        title={project.title}
                        type={project.type}
                        description={project.description}
                        iconUrl={project.iconUrl}
                        websiteUrl={project.websiteUrl}
                        githubUrl={project.githubUrl}
                />
        ))}
    </div>
    <div class="load-more-wrapper">
        <button class="load-more-button">Load More...</button>
    </div>
</section>

<style>
    .project-grid-container {
        padding: 2rem 0;
    }

    .section-title {
        font-size: 1.5rem;
        color: #0E6333;
        margin-top: 3rem;
        margin-bottom: 1.5rem;
    }

    .search-bar-wrapper {
        margin-bottom: 3rem;
        max-width: 600px;
    }

    .search-input {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 1rem;
    }

    .project-grid {
        display: grid;
        gap: 1.5rem;
        grid-template-columns: repeat(3, 1fr);
    }

    .load-more-wrapper {
        text-align: center;
        margin-top: 3rem;
        margin-bottom: 2rem;
    }

    .load-more-button {
        background: none;
        border: none;
        color: #0E6333;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        padding: 10px 20px;
        transition: color 0.3s;
    }

    .load-more-button:hover {
        color: #0A4A25;
        text-decoration: underline;
    }
</style>
